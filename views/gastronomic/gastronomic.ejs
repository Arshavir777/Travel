<%- include('../layouts/header.ejs') %>
<style> 
*{
	font-family: armArtur;
}
h2{
	font-family: armArtur;
}
</style>
		<aside id="colorlib-hero">
			<div class="flexslider">
				<ul class="slides">
			   	<li style="background-image: url(/images/gastronomic.jpg);">
			   		<div class="overlay"></div>
			   		<div class="container-fluid">
			   			<div class="row firstLayout">
				   			<div class="col-md-6 offset-md-3 col-sm-12 col-xs-12 slider-text">
				   				<div class="slider-text-inner text-center">
				   					<h1><%=header_title%></h1>
				   				</div>
				   			</div>
				   		</div>
			   		</div>
			   	</li>
			  	</ul>
		  	</div>
		</aside>

		<div class="colorlib-wrap">
			<div class="container">
				<div class="row">
					<div class="col-md-11">
						<div class="row">
							<div class="col-md-12">
								<div class="wrap-division">
						
									<div class="row">
										<% var div; 
										if (locale === 'am'){
												div = ':'
										}else{
												div = '.'
										}%>
											<% data.forEach(function(dest) { %>
													<div class="col-md-12 animate-box">
													<div class="room-wrap">
														<div class="row">
															<div class="col-md-6 col-sm-6">
																<div class="room-img" style="background-image: url(/images/<%=dest.img %>);"></div>
															</div>
															<div class="col-md-6 col-sm-6">
																<div class="desc text-center">
																	<h2 class='text-center text-danger'><%=dest.title[locale]%></h2>
																	<p><%=dest.description[locale].split(div)[0] + div + dest.description[locale].split(div)[1] %>..</p>
																	<a href="/tour/gastronomic/<%=dest.name%>" class="btn readMore btn-outline-info" ><%=__('More')%></a>
																</div>
															</div>
														</div>
													</div>
												</div>


											<% }); %>
										
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- SIDEBAR-->
			</div>
		</div>

		<%- include('../layouts/footer.ejs')%>