<%- include('../layouts/header.ejs') %>
<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides ">
            <li style="background-image: url(/images/<%=data.img%>);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row firstLayout">
                        <div class="col-md-6 offset-md-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1><%=data.title[locale]%></h1>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div class="container">
    <h2 class="text-center text-info "><%=__('Description')%></h2>
    <br>
    <div class="row">
        <div class="col-md-8 text-center ml-auto mr-auto">
            <p>
                <%=data.description[locale]%>
            </p>
            <span> <%=data.spec_description[locale]%></span>
        </div>
    </div>

    <div class="accordion mt-5 mb-5" id="acc">
        <div class="row justify-content-center ">

            <a href="#demo" data-toggle="collapse" class=" collapseDiv alert alert-success col-md-10 col-sm-10   ">
                    Հետաքրքիր է իմանալ
                <span class="icon-plus float-right"></span>
            </a>
            <div id="demo" class="col-md-10 collapse" data-parent="#acc">
                    <p>
                            <%=data.text[locale]%>
                        </p>

            </div>
        </div>
    </div>

    <h2 class="text-center mt-2 mb-3">Գնացուցակ </h2>
    <div class="row justify-content-center mt-2">
        <div class=" mt-4  " style="overflow-x: auto; direction: ltr">
            <table class="table table-bordered  table-responsive table-info text-center mb-4">
                <thead>
                    <tr>
                        <td> </td>
                        <td>
                            Տևողություն
                        </td>
                        <td>
                            Երկարություն
                        </td>
                        <td>
                            Գին
                        </td>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Փաթեթ 1</td>
                        <td><%=data.packages[0].duration%></td>
                        <td><%=data.packages[0].length%> կմ</td>
                        <td><%=data.packages[0].price%> Դ</td>

                    </tr>

                    <tr>
                        <td>Փաթեթ 2</td>

                        <td><%=data.packages[1].duration%></td>
                        <td><%=data.packages[1].length%> կմ</td>
                        <td><%=data.packages[1].price%> Դ</td>


                    </tr>
                    <tr>
                        <td>Փաթեթ 3</td>

                        <td><%=data.packages[2].duration%></td>
                        <td><%=data.packages[2].length%> կմ</td>
                        <td><%=data.packages[2].price%> Դ</td>

                    </tr>
                    <tr>
                        <td>Փաթեթ 4</td>
                        <td><%=data.packages[3].duration%></td>
                        <td><%=data.packages[3].length%> կմ</td>
                        <td><%=data.packages[3].price%> Դ</td>

                    </tr>

                </tbody>
            </table>

        </div>
    </div>
    <div class="row  justify-content-center">
        <div class="col-md-4">
            <div class="card desc_card" style=" max-height: 400px;">
                <img width="100px" height="100px" src="/images/schedule.png">
                <div class="card-body text-center">
                    <h5 class="card-text">Ժամանակահատվածը</h5>
                    <div><%=data.time%> ժամ</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card desc_card"  style=" max-height: 400px;">
                <img width="100px" height="100px" src="/images/price_include.png">
                <div class="card-body text-center">
                    <h5 class="card-text">Արժեքը <br>ներառում է</h5>
                    <div><%=data.price_include [locale]%></div>
                </div>
            </div>
        </div>
    </div>

</div>

</div>
</div>

<style>
    .table {
        display: block !important;
    }
   .collapseDiv {
             margin:  5px;
            display: flex;
            align-items: center;
            justify-content: center;
            justify-content: space-between;
            text-decoration: none !important;
        }

        .collapseDiv:focus {
            color: unset !important;
        }


    .card {
        min-height: 400px !important
    }

    .desc_card div {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    #colorlib-hero {
        margin-bottom: 50px;
    }

    /* linear-gradient(58deg , #00b4db, #0083b0) */
</style>
<%- include('../layouts/footer.ejs')%>