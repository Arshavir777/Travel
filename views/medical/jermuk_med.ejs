<%- include('../layouts/header.ejs') %>
<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides ">
            <li style="background-image: url(/images/<%=data.img%>);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row firstLayout">
                        <div class="col-md-6 offset-md-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>
                                    <%=data.title[locale]%>
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="container ">
    <div class="row justify-content-center">
            <div class="col-md-12">
                    <h1 class="text-center text-info "><%=__('Description')%></h1>
                    <br>
                    <div class="col-md-8 text-center ml-auto mr-auto  ">
                        <p>
                            <%=data.description[locale]%>
                        </p>
                        <br><br>
        
                    </div>
                </div>
        <div class="col-md-8">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img  class="d-block imgC caruselImage w-100 " src="/images/armenia.jpg" alt="First slide">
                        <div class="carousel-caption  d-md-block">
                           

                        </div>
                        <h2 class="text-black text-center mt-3">Արմենիա</h2>
                    </div>
                    <div class="carousel-item">
                        <img  class="d-block imgC caruselImage w-100 " src="/images/ashxar.jpg" alt="Second slide">
                        <div class="carousel-caption  d-md-block">
                        </div>
                        <h2 class="text-black text-center mt-3">Աշխարհ</h2>
                    </div>
                    <div class="carousel-item">
                        <img  class="d-block imgC caruselImage w-100 " src="/images/olimpia.jpeg" alt="Third slide">
                        <div class="carousel-caption  d-md-block">
                        </div>
                        <h2 class="text-black text-center mt-3">Օլիմպիա</h2>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
      
    </div>
    <div class="accordion mt-5 mb-5" id="acc">
        <div class="row justify-content-center ">

            <a href="#demo" data-toggle="collapse" class=" collapseDiv alert alert-success col-md-10 col-sm-10   ">
                Բուժվում են հետևյալ հիվանդությունները
                <span class="icon-plus float-right"></span>
            </a>
            <div id="demo" class="col-md-10 collapse" data-parent="#acc">
                <ul>
                    <%data.diseases[locale].forEach( elem => {%>
                    <li>
                        <%=elem%>
                    </li>
                    <%})%>
                </ul>

            </div>
        </div>

        <div class="row justify-content-center ">

            <a href="#demo2" data-toggle="collapse" class=" collapseDiv alert alert-success col-md-10 col-sm-10   ">
                Բուժական կենտրոն
                <span class="icon-plus float-right"></span>
            </a>
            <div id="demo2" class="col-md-10 collapse" data-parent="#acc">
                <div class="row justify-content-center">

                    <div class="col-md-6 ">
                        <h4 class="text-center">Անվճար</h4>
                        <ul>
                            <%data.med_center.free[locale].forEach( elem => {%>
                            <li>
                                <%=elem%>
                            </li>
                            <%})%>
                        </ul>

                    </div>
                    <div class="col-md-6">
                        <h4 class="text-center">Վճարովի</h4>

                        <ul>
                            <%data.med_center.paid[locale].forEach( elem => {%>
                            <li>
                                <%=elem%>
                            </li>
                            <%})%>
                        </ul>

                    </div>
                </div>


            </div>
        </div>

    </div>


    <h1 class="text-center"><%=__('Transportation-Amount')%></h1>
    <div class="row justify-content-center  mt-5">
        <div class="col-md-3">
            <div class="card desc_card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                        <%=data.dest_price[0].count%> Հոգի</h5>
                    <h4 class="card-text">
                        <%=data.dest_price[0].price%> Դ</h4>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card desc_card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                        <%=data.dest_price[1].count%> Հոգի</h5>
                    <h4 class="card-text">
                        <%=data.dest_price[1].price%> Դ</h4>

                </div>
            </div>
        </div>
    </div>
    <h1 class="text-center mt-5 mb-5 ">Գնացուցակ</h1>
    <div class="row justify-content-center">

        <%data.packages.forEach( elem => {%>
        <div  style="overflow-x: auto; direction: ltr">
            <%if(elem.title.en == 'Ashxar' || elem.title.en == 'Olimpia'){%>
                <br><br> <br>
                <%}%>
            <h3 class="text-center mt-2 mb-3">
                <%=elem.title[locale] %>
            </h3>
            <table class="table table-bordered table-responsive  table-info text-center mb-4 mt-4">
                <thead>

                    <tr>
                        <td class='p-3'> </td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.date %>
                        </td>
                        <% }) %>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td class='p-3'>1 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[0] %> Դ </td>
                        <% }) %>

                    </tr>
                    <tr>
                        <td class='p-3'>2 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[1] %> Դ </td>
                        <% }) %>

                    </tr>
                    <%if(elem.title['en'] == 'Olimpia') {%>
                    <tr>
                        <td class='p-3'>3 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[2] %> Դ </td>
                        <% }) %>

                    </tr>
                    <tr>
                        <td class='p-3'>4 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[3] %> Դ </td>
                        <% }) %>

                    </tr>

                    <%}%>


                    </tbody>
                </table>
            </div>
                <% }) %>
        </div>
    </div>
    <style>
        .collapseDiv {
             margin:  5px;
            display: flex;
            align-items: center;
            justify-content: center;
            justify-content: space-between;
            text-decoration: none !important;
        }

        .collapseDiv:focus {
            color: unset !important;
        }

        .table {
            display: block !important;
        }
        .card {
            min-height: 200px !important
        }
        .imgC{
            min-height: 250px;
            max-height: 500px;
        }
        .desc_card div {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        #colorlib-hero {
            margin-bottom: 50px;
        }

        /* linear-gradient(58deg , #00b4db, #0083b0) */
    </style>
    <%- include('../layouts/footer.ejs')%>