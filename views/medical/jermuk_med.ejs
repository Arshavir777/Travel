<%- include('../layouts/header.ejs') %>
<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides ">
            <li style="background-image: url(/images/<%=data.img%>);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row firstLayout">
                        <div class="col-md-6 offset-md-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>
                                    <%=data.title[lng]%>
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="container ">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/armenia.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h2 class="text-white">Արմենիա</h2>

                        </div>

                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/ashxar.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h2 class="text-white">Աշխարհ</h2>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/olimpia.jpeg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h2 class="text-white">Օլիմպիա</h2>

                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="text-center text-info ">Նկարագրություն</h2>
            <br>
            <div class="col-md-8 text-center ml-auto mr-auto  ">
                <p>
                    <%=data.description[lng]%>
                </p>
                <br><br>

            </div>
        </div>
    </div>
    <div class="accordion mt-5 mb-5" id="acc">
        <div class="row justify-content-center ">

            <a href="#demo" data-toggle="collapse" class=" collapseDiv alert alert-success col-md-10 col-sm-10   ">
                Բուժվում են հետևյալ հիվանդությունները
                <span class="icon-plus float-right"></span>
            </a>
            <div id="demo" class="col-md-10 collapse" data-parent="#acc">
                <ul>
                    <%data.diseases[lng].forEach( elem => {%>
                    <li>
                        <%=elem%>
                    </li>
                    <%})%>
                </ul>

            </div>
        </div>

        <div class="row justify-content-center ">

            <a href="#demo2" data-toggle="collapse" class=" collapseDiv alert alert-success col-md-10 col-sm-10   ">
                Բուժական կենտրոն
                <span class="icon-plus float-right"></span>
            </a>
            <div id="demo2" class="col-md-10 collapse" data-parent="#acc">
                <div class="row justify-content-center">

                    <div class="col-md-6 ">
                        <h4 class="text-center">Անվճար</h4>
                        <ul>
                            <%data.med_center.free[lng].forEach( elem => {%>
                            <li>
                                <%=elem%>
                            </li>
                            <%})%>
                        </ul>

                    </div>
                    <div class="col-md-6">
                        <h4 class="text-center">Վճարովի</h4>

                        <ul>
                            <%data.med_center.paid[lng].forEach( elem => {%>
                            <li>
                                <%=elem%>
                            </li>
                            <%})%>
                        </ul>

                    </div>
                </div>


            </div>
        </div>

    </div>


    <h2 class="text-center">Տրանսպորտի Գումար</h2>
    <div class="row justify-content-center  mt-5">
        <div class="col-md-3">
            <div class="card desc_card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                        <%=data.dest_price[0].count%> Հոգի</h5>
                    <h4 class="card-text">
                        <%=data.dest_price[0].price%> Դ</h4>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card desc_card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                        <%=data.dest_price[1].count%> Հոգի</h5>
                    <h4 class="card-text">
                        <%=data.dest_price[1].price%> Դ</h4>

                </div>
            </div>
        </div>
    </div>
    <h2 class="text-center">Գնացուցակ</h2>
    <div class="row justify-content-center">

        <%data.packages.forEach( elem => {%>
        <div class=" mt-4 col-md-6 col-sm-12 " style="overflow-x: auto; direction: ltr">
            <h2 class="text-center">
                <%=elem.title[lng] %>
            </h2>
            <table class="table table-bordered  table-responsive table-info text-center">
                <thead>

                    <tr>
                        <td class='p-3'> </td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.date %>
                        </td>
                        <% }) %>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td class='p-3'>1 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[0] %> Դ </td>
                        <% }) %>

                    </tr>
                    <tr>
                        <td class='p-3'>2 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[1] %> Դ </td>
                        <% }) %>

                    </tr>
                    <%if(elem.title['en'] == 'Olimpia') {%>
                    <tr>
                        <td class='p-3'>3 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[2] %> Դ </td>
                        <% }) %>

                    </tr>
                    <tr>
                        <td class='p-3'>4 Անձ</td>
                        <%elem.prices.forEach( price => {%>
                        <td class='p-3'>
                            <%=price.prices[3] %> Դ </td>
                        <% }) %>

                    </tr>

                    <%}%>


                    </tbody>
                </table>
            </div>
                <% }) %>
        </div>
    </div>
    <style>
        .collapseDiv {
             margin:  5px;
            display: flex;
            align-items: center;
            justify-content: center;
            justify-content: space-between;
            text-decoration: none !important;
        }

        .collapseDiv:focus {
            color: unset !important;
        }

        .table {
            display: block !important;
        }

        .desc_card {
            display: flex;
            align-items: center;
            margin: 10px;
            padding-top: 10px;
            max-height: 200px;
            background: linear-gradient(to top, #56ccf2, #2f80ed);
        }

        .card {
            min-height: 200px !important
        }

        .desc_card div {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        #colorlib-hero {
            margin-bottom: 50px;
        }

        /* linear-gradient(58deg , #00b4db, #0083b0) */
    </style>
    <%- include('../layouts/footer.ejs')%>