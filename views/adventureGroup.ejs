<%- include('./layouts/header.ejs') %>
<style>
	.adv_tours{
		background: linear-gradient( #e65c00,#f9d423 );
		text-decoration: none !important;
		display: flex;
		justify-content: center;
		align-items: center
	}
	</style>
	<div class="colorlib-loader"></div>
		<aside id="colorlib-hero">
			<div class="flexslider">
				<ul class="slides">
			   	<li style="background-image: url(/images/adventureBackground.jpg);">
			   		<div class="overlay"></div>
			   		<div class="container-fluid">
			   			<div class="row firstLayout">
				   			<div class="col-md-6 offset-md-3 col-sm-12 col-xs-12 slider-text">
				   				<div class="slider-text-inner text-center">
				   				</div>
				   			</div>
				   		</div>
			   		</div>
			   	</li>
			  	</ul>
		  	</div>
		</aside>

		<div class="colorlib-wrap">
			<div class="container">
				<div class="row justify-content-md-center">
					<div class="col-md-12">
						<div class="row">
							<%data.forEach( elem => {%>
							<div class="col-md-12 animate-box">
							<div class="room-wrap">
								<div class="row">
									<div class="col-md-6 col-sm-6">
										<div class="room-img rounded" style="background-image: url(/images/<%=elem.img %>);"></div>
									</div>
									<div class="col-md-6 col-sm-6">
										<div class="desc text-center">
											<h2 class='text-center text-danger'><%=elem.title[lng]%></h2>
											<p><%=elem.description[lng].split(':')[0] + ':' + elem.description[lng].split(':')[1] %>..</p>

											<a href="/tour/adventure-single/<%=elem.name%>" class="btn readMore btn-outline-info" >Մանրամասներ</a>
										</div>
									</div>
								</div>
							</div>
						</div>
							<%})%>
								</div>
							</div>
						</div>
					</div>

					<!-- SIDEBAR-->
			</div>

		<%- include('./layouts/footer.ejs')%>