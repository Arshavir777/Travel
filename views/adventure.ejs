<%- include('./layouts/header.ejs') %>
<style>
/* linear-gradient(45deg,  #ff4e50, #f9d423  );*/
	.adv_tours{
  background: linear-gradient(to top, #56ccf2, #2f80ed); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */		text-decoration: none !important;
		display: flex;
		justify-content: center;
		align-items: center;
		border-radius: 20px
	}
	</style>
	<div class="colorlib-loader"></div>
		<aside id="colorlib-hero">
			<div class="flexslider">
				<ul class="slides">
			   	<li style="background-image: url(/images/adventureBackground.jpg);">
			   		<div class="overlay"></div>
			   		<div class="container-fluid">
			   			<div class="row firstLayout">
				   			<div class="col-md-6 offset-md-3 col-sm-12 col-xs-12 slider-text">
				   				<div class="slider-text-inner text-center">
				   					<h1>Արկածային</h1>
				   				</div>
				   			</div>
				   		</div>
			   		</div>
			   	</li>
			  	</ul>
		  	</div>
		</aside>

		<div class="colorlib-wrap">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="row  justify-content-md-center">
							<% data.forEach( elem => { %>
							<a 
								style="height:400px!important"
								href="<%=elem.single == true ? `/tour/adventure-single/${elem.name}` : `/tour/adventure-group/${elem.ID}`%>"
								class=" rounded-md adv_tours text-center  col-md-3   m-4 "
								>
									<h2><%=elem.title[lng]%></h2>		
							</a>
							<%})%>
								</div>
							</div>
						</div>
					</div>

					<!-- SIDEBAR-->
			</div>

		<%- include('./layouts/footer.ejs')%>